
<section class="vh-100 gradient-custom">

    <div class="container py-4 h-500">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-4 ">
                        <form method="post">
                            <div class="mb-md-4 mt-md-3 pb-3 ">

                                <h2 class="fw-bold mb-2 text-uppercase text-center">Login</h2>
                                <p class="text-white-50 mb-5 text-center">Wellcome to chatting website!</p>

                                <!-- Email input -->
                                <div class="form-outline form-white mb-4">
                                    <label class="form-label"  for="email">Email</label>
                                    <input type="email" id="email" name="email" class="form-control form-control-lg" />

                                </div>
                                <!-- Password input -->
                                <div class="form-outline form-white mb-4">
                                    <label class="form-label" for="password">Password</label>
                                    <input type="password" id="password" name="password" class="form-control form-control-lg" />

                                </div>


                                <p class="small mb-4 pb-lg-2"><a class="text-white-50  " href="#!">Forgot
                                        password?</a></p>
                                {{#if flash.msg}}
                                <div class="form-group">
                                    <div class="alert alert-{{flash.type}} alert-dismissible fade show">
                                        <button type="button" class="close"
                                            data-dismiss="alert">&times;</button>{{flash.msg}}
                                    </div>
                                </div>
                                {{/if}}
                                <div class="col-md-12 text-center">
                                    <button class="btn btn-outline-light btn-lg px-5" type="submit">Login</button>
                                </div>
                                <p class="text-danger mb-3 mt-4 text-center">Or Sign Up Using</p>

                                <div class="d-flex justify-content-center text-center mt-4 pt-1">



                                    <a href="#" class="text-white"><i class="fa fa-facebook-f fa-lg"></i></a>

                                    <a href="#" class="text-white"><i class="fa fa-google fa-lg mx-2 px-2"></i></a>
                                </div>

                            </div>
                        </form>
                        <div class="col-md-12 text-center">
                            <p class="mb-0">Don't have an account? <a href="/register"
                                    class="text-blue -50 fw-bold">Sign
                                    Up</a>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
